@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/dashboard/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/dashboard/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <!-- Logo -->
                    <div class="logo">
                        <h1><a href="index.html">User Dashboard</a></h1>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="input-group form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="button">Search</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="navbar navbar-inverse" role="banner">
                        <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Context.Session.GetString("Name") <b class="caret"></b></a>
                                    <ul class="dropdown-menu animated fadeInUp">
                                        <li><a asp-action="Profile" asp-controller="Account">Profile</a></li>
                                        <li><a asp-action="Logout" asp-controller="CPanel" asp-area="Administrator">Logout</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-content">
        <div class="row">
            <div class="col-md-2">
                <div class="sidebar content-box" style="display: block;">
                    <ul class="nav">
                        <!-- Main menu -->
                        <li class="current"><a href="index.html"><i class="glyphicon glyphicon-home"></i> Dashboard</a></li>
                        <li><a asp-action="Index" asp-controller="Courses" ><i class="glyphicon glyphicon-calendar"></i> Courses</a></li>
                        <li><a asp-action="Index" asp-controller="Instructors" ><i class="glyphicon glyphicon-stats"></i> Instructors</a></li>
                        <li><a asp-action="Index" asp-controller="Sliders" ><i class="glyphicon glyphicon-list"></i> Sliders</a></li>
                        <li><a asp-action="Index" asp-controller="Menu" ><i class="glyphicon glyphicon-record"></i> Menu</a></li>
                        <li><a asp-action="Index" asp-controller="Clients" ><i class="glyphicon glyphicon-pencil"></i> Clients</a></li>
                        <li><a asp-action="Index" asp-controller="Roles" ><i class="glyphicon glyphicon-tasks"></i> Roles</a></li>
                        <li><a asp-action="Index" asp-controller="Users" ><i class="glyphicon glyphicon-tasks"></i> Users</a></li>
                        <li class="submenu">
                            <a href="#">
                                <i class="glyphicon glyphicon-list"></i> Setting
                                <span class="caret pull-right"></span>
                            </a>
                            <!-- Sub menu -->
                            <ul>
                                <li><a href="login.html">Change Password</a></li>
                                <li><a href="signup.html">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10">
              
                <div class="content-box-large">
                   @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="container">

            <div class="copy text-center">
                Copyright 2014 <a href='#'>Website</a>
            </div>

        </div>
    </footer>

    <script src="https://code.jquery.com/jquery.js"></script>

    <script src="~/dashboard/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/dashboard/js/custom.js"></script>
</body>
</html>